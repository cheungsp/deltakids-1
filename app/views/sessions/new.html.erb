<div class="container background">
    <%= form_tag sessions_path do %>
    <div class="form-horizontal">
      <div class="form-group">
        <h1 class="col-sm-offset-2">Sign in here ! </h1>
        <br>
      </div>
      <div class="form-group">
      	<%= label_tag :email, 'Email: ',class: "col-sm-4 col-sm-offset-2" %>
        <div class="col-sm-6">
        	<%= email_field_tag :email, '',class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
    	<%= label_tag :password, 'Password: ', class: "col-sm-4 col-sm-offset-2" %>
        <div class="col-sm-6">
        	<%= password_field_tag :password, '', class: "form-control"  %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-6 col-sm-offset-3">
        <%= submit_tag 'Sign In', class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>
  </div>
</div>
